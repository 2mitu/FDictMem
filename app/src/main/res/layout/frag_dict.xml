<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ffl.felix.widget.ClearableAutoCompleteTextView
        android:id="@+id/item_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:singleLine="true"
        android:completionThreshold="3"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textSize="35sp"
        android:hint="@string/search_hint"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/item_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="3" />

    <TextView
        android:id="@+id/item_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:singleLine="false"
        android:text="TextView"
        android:textSize="30sp"
        android:freezesText="true"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_input"
        app:layout_constraintVertical_weight="17" />

</android.support.constraint.ConstraintLayout>